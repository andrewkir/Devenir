
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="350dp">
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="left"
        android:text="Результат работы:" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <android.support.design.widget.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:nestedScrollingEnabled="true"
            android:layout_marginRight="10dp"
            android:layout_weight="1">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/textTextField"
                android:overScrollMode="always"
                android:maxLines="5"
                android:minLines="5"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="Text" />
        </android.support.design.widget.TextInputLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp">
            <ImageButton
                android:id="@+id/textCopyContent"
                android:background="@drawable/whiteRectangle"
                android:src="@drawable/ic_content_copy_gray"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"/>
            <ImageButton
                android:id="@+id/textSendContent"
                android:background="@drawable/whiteRectangle"
                android:src="@drawable/ic_send_gray"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <android.support.design.widget.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="20dp"
            android:nestedScrollingEnabled="true"
            android:layout_marginRight="10dp"
            android:layout_weight="1">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/latexTextField"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:hint="LaTeX" />
        </android.support.design.widget.TextInputLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp">
            <ImageButton
                android:id="@+id/latexCopyContent"
                android:background="@drawable/whiteRectangle"
                android:src="@drawable/ic_content_copy_gray"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"/>
            <ImageButton
                android:id="@+id/latexSendContent"
                android:background="@drawable/whiteRectangle"
                android:src="@drawable/ic_send_gray"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>