<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="pointViewStyle">@style/Point</item>
  </style>
  
  <style name="AppThemeClearStatusBar" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

    <item name="pointViewStyle">@style/Point</item>
    <item name="android:windowTranslucentStatus">true</item>
  </style>

  <style name="Point">
    <item name="color">@color/PointViewColor</item>
    <item name="pointRadius">@dimen/pointRadius</item>
    <item name="ringRadius">@dimen/ringRadius</item>
    <item name="ringThickness">@dimen/ringThickness</item>
    <item name="ringColor">@color/PointViewColor</item>
  </style>

</resources>
